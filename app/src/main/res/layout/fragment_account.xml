<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imgSetAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_person"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="This is Your NickName"
            android:textSize="22sp"
            app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintLeft_toRightOf="@id/imgSetAvatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUserAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="This is Your Age"
            android:textSize="22sp"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintLeft_toRightOf="@id/imgSetAvatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserName" />
        <TextView
            android:id="@+id/tvUserSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="This is Your Sex"
            android:textSize="22sp"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintLeft_toRightOf="@id/imgSetAvatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserAge" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSetting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/imgSetAvatar"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/tvSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="20dp"
                android:text="Setting"
                android:textSize="25sp" />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Sign out"
            android:textAllCaps="false"
            android:textSize="25sp"
            app:layout_constraintLeft_toRightOf="@id/btnEditInfo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvSetting" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Edit Info"
            android:textAllCaps="false"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnSignOut"
            app:layout_constraintTop_toBottomOf="@id/cvSetting" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>